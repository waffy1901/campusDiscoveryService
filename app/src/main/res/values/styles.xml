<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="eventTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:paddingBottom">5dp</item>

        <item name="android:text">TitlePlaceholder</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="eventPlainText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">7dp</item>

        <item name="android:text">PlainPlaceholder</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="eventInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:text">InfoPlaceholder</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/gray</item>

    </style>

</resources>